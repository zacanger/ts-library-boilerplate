{
  "name": "ts-library-boilerplate",
  "description": "TypeScript boilerplate for web and Node libraries.",
  "version": "1.1.1",
  "private": true,
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "http://zacanger.com"
  },
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-s -s build:clean build:rollup",
    "build:clean": "rm -rf lib && mkdir -p lib",
    "build:rollup": "rollup -c",
    "format": "prettier --write *.js \"src/*.ts\"",
    "postbuild": "tsc --emitDeclarationOnly 2>&1 >/dev/null || true",
    "prebuild": "npm t",
    "preversion": "npm run build",
    "test": "run-s -s test:lint test:cover",
    "test:cover": "npm run test:jest -- --coverage --no-cache",
    "test:jest": "jest",
    "test:lint": "eslint --ext .ts,.js -c .eslintrc.json src"
  },
  "homepage": "https://github.com/zacanger/ts-library-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-library-boilerplate.git"
  },
  "bugs": "https://github.com/zacanger/ts-library-boilerplate/issues",
  "keywords": [
    "boilerplate"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@types/jest": "25.1.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.1.0",
    "babelrc-rollup": "3.0.0",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "1.1.3",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lint-staged": "10.0.8",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "2.0.1",
    "rollup": "2.1.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-uglify": "6.0.4",
    "rollup-watch": "4.3.1",
    "sortpack": "2.1.2",
    "tap-spec": "5.0.0",
    "typescript": "3.8.3",
    "uglify-es": "3.3.10"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|dist|node_modules)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "package.json": [
      "sortpack"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
